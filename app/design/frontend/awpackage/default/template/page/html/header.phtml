                        $total = $this->helper('checkout/cart')->getQuote()->getGrandTotal(); //get total price
                        if($count==0)
                        {
                            echo $this->__('<a class="top-link-cart" href="http://www.awazon.ru/checkout/cart/" class="cartgo">В корзине: <span>0</span> товаров</a>',$count);
                        }
                        if($count==1)
                        {
                            echo $this->__('<a class="top-link-cart" href="http://www.awazon.ru/checkout/cart/" class="cartgo">В корзине: <span>1</span> товар</a>',$count);
                        }
                        if($count==2 || $count==3 || $count==4)
                        {
                            echo $this->__('<a class="top-link-cart" href="http://www.awazon.ru/checkout/cart/" class="cartgo">В корзине: <span>%s</span> товара</a>',$count);
                        }
                        if($count>4)
                        {
                            echo $this->__('<a class="top-link-cart" href="http://www.awazon.ru/checkout/cart/" class="cartgo">В корзине: <span>%s</span> товаров</a>',$count);
                        }
                        echo $this->__('<a class="top-link-cart" href="http://www.awazon.ru/checkout/cart/" class="cartgo">На сумму: <span>%s</span></a>', $this->helper('core')->formatPrice($total, false));
                    ?>
                </div>
            </div>
        </div>
